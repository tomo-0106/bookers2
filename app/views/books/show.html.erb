<div>
  <%= flash[:createbook] %>
  <%= flash[:updatebook] %>
  <h1>User info</h1>
   <%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>name：<%= current_user.name %></p>
  <p>introduction：<%= current_user.introduction %></p>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
 </div>
 <% @books.each do |book| %>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag current_user, :profile_image %>
  <% end %>
<% end %>
<div>
<h1>New Book</h1>
<%= form_with model: @newbook, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div>
<div>
  <h1>Book detail</h1>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Deleat", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>


</div>