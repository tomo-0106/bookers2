<body>
  <div class="container">
 <div class="row">
<div class="col-md-3">
<div>
  <%= flash[:createbook] %>
  <%= flash[:updatebook] %>
  <h1>User info</h1>
   <%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
  <p>name：<%= @book.user.name %></p>
  <p>introduction：<%= @book.user.introduction %></p>
  <p><%= link_to edit_user_path(@book.user.id) do %><i class="fas fa-user-cog"></i><% end %></p>
 </div>

<div>
<h1>New book</h1>
<%= form_with model: @newbook, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div>
</div>
<div>
  <div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
  <%= attachment_image_tag @book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
  <%= link_to user_path(@book.user.id) do %>
       <%= @book.user.name %>
      <% end %>
  <p><%= link_to @book.title, book_path(@book.id) %></p>
  <p>opinion：<%= @book.body %></p>
  <% if @book.user == current_user %>
   <p><%= link_to "Edit", edit_book_path(@book.id)%></p>
   <p><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></p>

  <% end %>
  </div>


</div>
</div>
</div>
</body>