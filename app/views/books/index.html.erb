
<div class="container">
 <div class="row">
 <div class="col-md-3 ">
 <div>
  <h1>User info</h1>

  <% if @book.errors.any? %>
   <p>error can't be blank</p>
<% end %>

   <%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
  <p>name：<%= current_user.name %></p>
  <p>introduction：<%= current_user.introduction %></p>
  <p><%= link_to edit_user_path(current_user) do %><i class="fas fa-user-cog"></i><% end %></p>
 </div>


<div>
<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div>
</div>

<div class="col-md-8 offset-md-1">
<h1>Books</h1>
  <table class="table">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
   <% @books.each do |book| %>
   <tbody>
    <tr>
     <th>
      <%= link_to user_path(book.user.id) do %>
       <%= attachment_image_tag book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %>
     </th>
     <th> <%= link_to book.title, book_path(book.id) %></th>
     <th><%= book.body %></th>
    </tr>
   </tbody>
   <% end %>
   </table>
   </div>
</div>
</div>
