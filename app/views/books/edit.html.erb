<h1>Editing Book</h1>
<% if @book.errors.any? %>
   <p>error</p>
<% end %>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <li>
    <%= link_to 'show', book_path %>
  </li>
  <li>
    <%= link_to 'Back', books_path %>
   </li>
<% end %>