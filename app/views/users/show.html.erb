
 <div>
  <h1>User info</h1>
  <%= flash[:updateuser] %>
  <%= flash[:signin] %>
  <%= flash[:signup] %>


   <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>name：<%= @user.name %></p>
  <p>introduction：<%= @user.introduction %></p>
   <% if @user.id == current_user.id %>
   <i class="fas fa-user-cog"><%= link_to "プロフィール編集", edit_user_path(@user) %></i>
    <% @books.each do |book| %>
    <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag @user, :profile_image %>
   <% end %>
  <% end %>
 </div>

 <div>
<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div>


 <div>
  <h1>Books</h1>
  <table class="table">
   <tr>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
  <% @books.each do |book| %>
   <tr>
    <th><%= link_to book.title, "/books/#{book.id}" %></th>
    <th><%= book.body %></th>
   </tr>

  </div>
  <% end %>
  <% end %>
</table>