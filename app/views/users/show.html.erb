<body>
<div class="container">
 <div class="row">
 <div class="col-md-3">
  <div>
    <h1>User info</h1>
    <%= flash[:updateuser] %>
    <%= flash[:signin] %>
    <%= flash[:signup] %>


     <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
    <p>name：<%= @user.name %></p>
    <p>introduction：<%= @user.introduction %></p>
     <%= link_to edit_user_path(@user) do %><i class="fas fa-user-cog"></i>
     <% end %>

 </div>

 <div>
  <h1>New book</h1>
  <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
 </div>
 </div>


 <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table">
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    <% @books.each do |book| %>
     <tr>
      <th><%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %>

      </th>
      <th><%= link_to book.title, "/books/#{book.id}" %></th>
      <th><%= book.body %></th>
     </tr>

    </div>
    <% end %>
  </table>
</div>
</div>
</div>
</body>